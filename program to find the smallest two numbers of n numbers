#include <stdio.h>

int main()
{
int n,smallest,i,a[100],ndsmallest;
printf("enter the maximum value (n)");
scanf("%d",&n);
for(i=0;i<n;i++)

  scanf("%d",&a[i]);
smallest=a[0];
for(i=0;i<n;i++)
{
    if(a[i]<smallest)
    {
        smallest=a[i];
        
    }
}
printf("the smallest is%d",smallest);
ndsmallest=smallest+1;
printf("the second smallest is %d",ndsmallest);
}
